<?xml version="1.0"?>

<layouts theme='default'>
  
  <layout action="default">
  
    <block name="header">
      <view>default/header</view>
      <view>default/menu</view>
    </block>
    
    <block name="content">
      <view>default/default</view>
    </block>
    <block name="footer">
      <view>default/footer</view>
    </block>
  </layout>

  <!-- The action maps to the the first level -->
  <layout action="about">
    <block name="content">
      <view>default/about</view>
    </block>
  </layout>
  
  <layout action="contact">
      <block name="content">
      <view>default/contact</view>
    </block>

  </layout>
  
</layouts>